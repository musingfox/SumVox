{
  "name": "sumvox",
  "version": "1.0.0",
  "description": "Intelligent voice notifications for AI coding tools - LLM-powered summarization with TTS",
  "author": "Nick Huang",
  "homepage": "https://github.com/musingfox/sumvox",
  "license": "MIT",
  "entry_point": "target/release/sumvox",
  "hooks": {
    "stop": {
      "command": "target/release/sumvox",
      "description": "Speak task completion summary using multi-provider TTS",
      "async": true,
      "timeout": 30000
    }
  },
  "requirements": {
    "platform": ["darwin", "linux"],
    "minimum_os_version": "10.15",
    "environment_variables": {
      "optional": [
        "GEMINI_API_KEY",
        "ANTHROPIC_API_KEY",
        "OPENAI_API_KEY"
      ]
    }
  },
  "configuration": {
    "config_file": "~/.config/sumvox/config.json",
    "schema": "config/recommended.json"
  }
}
