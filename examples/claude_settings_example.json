{
  "_comment": "Example Claude Code settings with voice notification hook",
  "_note": "Copy this to ~/.claude/settings.json or project's .claude/settings.local.json",
  "_important": "Update the path to point to your actual claude-voice installation",

  "hooks": {
    "stop": [
      "/Users/YOUR_USERNAME/workspace/claude-voice/.claude/hooks/voice_notification.py"
    ]
  },

  "permissions": {
    "allow": [
      "Bash(mkdir:*)",
      "Bash(uv:*)",
      "WebSearch"
    ],
    "deny": [],
    "ask": []
  },

  "sandbox": {
    "autoAllowBashIfSandboxed": true,
    "enabled": true
  }
}
